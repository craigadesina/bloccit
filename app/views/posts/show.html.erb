<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
    
    <p><strong>Post Summary:</strong></p>
    
    <% if @post.summary.present? %>
    <p><%= @post.summary.body %></p>
    <% else %>
    <p> "This post has no summary yet. Why Not click below and create one?" </p>
    <%= link_to "Create Summary", new_summary_path(@topic, @post) %>
    <% end %>

  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
